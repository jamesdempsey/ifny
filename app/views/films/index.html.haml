%h1= 'Films'
#hidden
  - @films.each do |film|
    .item{style: container_dimensions(film.poster.thumb), id: film.id}
      .item-content{style: container_dimensions(film.poster.thumb)}
        .item-image
          = image_tag film.poster.thumb
        .item-description
          .film-description
            .title= film.title
            = truncate film.description, length: 550, separator: ' ', omission: '... (more)'
          .film-showtimes
            .film-showtimes-index
              .title= 'Playing at'
              %ul
                - film.theaters.each do |theater|
                  %li
                    = link_to theater.name, theater, class: 'theater-name'
#container
